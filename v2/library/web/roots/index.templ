package roots

import (
	"fmt"
	"github.com/eduardooliveira/stLib/v2/library/entities"
)

templ Index(asset *entities.Asset) {
	<h1>{*asset.Path}</h1>
	for _, item := range asset.NestedAssets {
		<div class="card bg-base-100 w-96 shadow-xl">
  if item.Thumbnail != nil {
  <figure>
    <img
      src={fmt.Sprintf("/lib/%s/file",*item.Thumbnail)}
      alt="Shoes" />
  </figure>
  }
  <div class="card-body">
    <h2 class="card-title">
      <a hx-get={fmt.Sprintf("/lib/%s",item.ID)} hx-target=".main" hx-trigger="click" hx-push-url="true"> { *item.Path }</a>
      <div class="badge badge-secondary">NEW</div>
    </h2>
    <p>If a dog chews shoes whose shoes does he choose?</p>
    <div class="card-actions justify-end">
      <div class="badge badge-outline">Fashion</div>
      <div class="badge badge-outline">Products</div>
    </div>
  </div>
</div>
	}
}
